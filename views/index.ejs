    <div class="toast-header bg-success">
    </div>
    <div class="toast-body">
      Hello, world! This is a toast message.
    </div>
  </div>
</div>
<div class="toast-container position-fixed top-10 end-0 p-3">
  <div id="errorToast" class="toast" role="alert" data-bs-autohide="true" data-bs-delay="2000" aria-live="assertive" aria-atomic="true">
    <div class="toast-header bg-danger">
    </div>
    <div class="toast-body">
      Hello, world! This is a toast message.
    </div>
  </div>
</div>
<div id="blogExpandedContainer">
    <div id="blogExpandedBack"></div>
    <div id="blogExpandedFrame">
        <div class="my-1 pb-4 text-center">
        <div>
            <div id="buttonPanel">
                <button id="closeButton" onclick="hideMe()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                        <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
                    </svg>
                </button>
            </div>
            <button type="" id="editButton" onclick="editBlog()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
                    </svg>
                </button>
                <button type="" id="deleteButton" onclick="doDelete(selected)">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                    </svg>
                </button>
            <div id="blogInformationContainer">
                <div id="blogInformationJustText">
                    <hr id=>
                    <h1 id="blogInformationTitle">Title</h1>
                    <div id="textPanel">
                        <p id="blogInformationText">Text</p>
                    </div>
                </div>
                <form id="editForm">
                    <div id="editFormText">
                        <input type="text" name="title" class="title-input" id="editTitleInput">
                        <hr>
                        <textarea name="text" class="content-input" id="editContentInput"></textarea>
                    </div>
                      <div id="editImagePanel">
                        <label>Picture</label>
                        <label  for="editPictureCurrent" style="font-size: 12pt;">Current picture is:</p>
                        <input id="editPictureCurrent" disabled>
                        <label for="editImageInput" style="font-size: 22pt;">Choose a new image</label>
                        <input required type="file" accept="image/*" id="editImageInput" name="image">
                    </div>
                    <div id="editFormButton">
                        <button class="btn btn-success" onclick="doPatch(selected)">Update</button>
                    </div>
                </form>
                <form id="createForm">
                    <div id="createFormText">
                        <label for="createTitleInput">Blog title</label>
                        <input type="text" name="title" class="title-input" id="createTitleInput">
                        <hr>
                        <label for="createContentInput">Text</label>
                        <textarea name="text" class="content-input" id="createContentInput"></textarea>
                    </div>
                    <div id="createImagePanel">
                        <label>Picture</label>
                        <label for="createImageInput" style="font-size: 22pt;">Choose a new image</label>
                        <input required type="file" accept="image/*" id="createImageInput" name="image">
                    </div>
                    <div id="editFormButton">
                        <button class="btn btn-success" onclick="doCreate()">Create</button>
                    </div> 
                </form>
            </div>
        </div>
    </div>
    </div>
</div>
<div class="px-4 my-1 text-center border-bottom start-page"> 
    <div class="col-12 start-page-top"> 
        <h1 class="display-4 fw-bold">Brian's Blog About Stuff</h1> 
        <img class="blog-photo" src="images/start.png">
    </div> 
    <div class="blog-container">
            <%if(locals.blogData){%>
                <%blogData.forEach(element => {%>
                    <div class="container blogContainer col-6" <%if(true){%>onclick="expandBlog(<%=element.id%>);<%}%>"> 
                        <div class="row flex-row-reverse align-items-right g-5 blog-inner"> 
                            <div class="d-flex col-6 align-content-center image-container">
                                <% if(element.image){%>
                                <img src="/image/<%=element.image%>" class="d-block img-fluid blog-list-image" alt="Bootstrap Themes" loading="lazy">
                                <%}else{%>
                                <img src="images/vine.png" class="d-block img-fluid blog-list-image" alt="Bootstrap Themes" width="50%" height="300" loading="lazy">
                                <%}%>
                            </div> 
                            <div class="col-6 text-align-center align-content-center" style="padding: 0;"> 
                                <h2 class="fw-bold lh-1 blog-heading"><%=element.title%></h2> 
                                <p class=""><%=element.content%></p> 
                            </div> 
                        </div> 
                    </div>
                <%});%>
            <%}%>
    </div>
    <%-include("partials/footer.ejs")%>
</div>
